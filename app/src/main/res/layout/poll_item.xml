<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:contentPadding="10dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/colorMessageSentOTHER">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/poll_question"
                style="@style/poll_item_widgets"
                android:textSize="15sp"
                />

            <TextView
                android:id="@+id/poll_active_text"
                style="@style/poll_item_widgets"
                android:textSize="12sp"
                android:textColor="@color/color_rank_MOD" />

        </LinearLayout>

        <TextView
            android:id="@+id/poll_voted_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"/>

    </LinearLayout>

</android.support.v7.widget.CardView>