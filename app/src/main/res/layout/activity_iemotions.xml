<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    tools:context="com.example.steven.patataschat.Activities.IEmotionsActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/buttons_container"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:background="@drawable/rectangle_shape"
        android:layout_weight="1"
        android:layout_height="0dp">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/icon_spinner"
                    android:layout_width="150dp"
                    android:background="@drawable/rectangle_shape"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"/>

                <Spinner
                    android:id="@+id/color_spinner"
                    android:layout_width="150dp"
                    android:background="@drawable/rectangle_shape"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"/>

                <EditText
                    android:id="@+id/button_title"
                    android:layout_width="150dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/textbox_shape"
                    android:hint="@string/IEmotions_hint"
                    android:layout_height="wrap_content"/>

                <Button
                    android:layout_margin="5dp"
                    android:text="@string/IEmotions_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="addIEmotionButton"/>

            </LinearLayout>

            <Button
                android:id="@+id/preview_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/IEmotions_preview"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
