<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/login_and_register_layout_config"
    tools:context="com.example.steven.patataschat.Activities.LoginActivity">

    <ImageView
        android:id="@+id/group_logo"
        android:src="@mipmap/ic_launcher"
        style="@style/logo_style" />

    <EditText
        android:id="@+id/user_field"
        style="@style/login_and_register_textfield"
        android:drawableStart="@drawable/ic_nickname_24dp"
        android:hint="@string/username_hint"
        android:inputType="text" />

    <EditText
        android:id="@+id/password_field"
        style="@style/login_and_register_textfield"
        android:drawableStart="@drawable/ic_password_24dp"
        android:hint="@string/password_hint"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/signin_button"
        style="@style/login_and_register_button"
        android:text="@string/login_button"
        android:onClick="log_in"/>

    <TextView
        android:id="@+id/go_to_register_button"
        style="@style/login_and_register_text"
        android:layout_marginTop="30dp"
        android:text="@string/sign_up_text"
        android:onClick="show_registration"/>

</LinearLayout>
