<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    tools:context="com.example.steven.patataschat.Activities.PollActivity">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:animateLayoutChanges="true"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/poll_recycler"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

        <ScrollView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            >

            <LinearLayout
                android:id="@+id/options_layout"
                android:animateLayoutChanges="true"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:orientation="vertical"
                android:gravity="center">

                <RadioGroup
                    android:id="@+id/radio_group_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/opt_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <RadioButton
                        android:id="@+id/opt_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <RadioButton
                        android:id="@+id/opt_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <RadioButton
                        android:id="@+id/opt_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <RadioButton
                        android:id="@+id/opt_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </RadioGroup>

                <TextView
                    android:id="@+id/result_1"
                    android:visibility="gone"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ProgressBar
                    android:id="@+id/progress_1"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/result_2"
                    android:visibility="gone"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ProgressBar
                    android:id="@+id/progress_2"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/result_3"
                    android:visibility="gone"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ProgressBar
                    android:id="@+id/progress_3"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/result_4"
                    android:visibility="gone"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ProgressBar
                    android:id="@+id/progress_4"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/result_5"
                    android:visibility="gone"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ProgressBar
                    android:id="@+id/progress_5"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/submit_vote"
                    android:text="submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="submit_vote"
                    android:visibility="visible"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:padding="20dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">

        <EditText
            android:layout_margin="5dp"
            android:id="@+id/title"
            android:textSize="15sp"
            android:hint="ask something"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_1"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/option_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="change_check"/>

                    <EditText
                        android:id="@+id/text_1"
                        android:textSize="15sp"
                        android:hint="option 1"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:inputType="text"
                        android:maxLines="1"
                        android:layout_height="wrap_content" />

                    <ImageButton
                        android:id="@+id/button_1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@null"
                        android:src="@drawable/ic_cancel_black_24dp"
                        android:onClick="anotherOption"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_2"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/option_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="change_check"/>

                    <EditText
                        android:id="@+id/text_2"
                        android:textSize="15sp"
                        android:hint="option 2"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:inputType="text"
                        android:maxLines="1"
                        android:layout_height="wrap_content" />

                    <ImageButton
                        android:id="@+id/button_2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@null"
                        android:src="@drawable/ic_cancel_black_24dp"
                        android:onClick="anotherOption"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_3"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/option_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:onClick="change_check"/>

                    <EditText
                        android:id="@+id/text_3"
                        android:textSize="15sp"
                        android:hint="option 3"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:inputType="text"
                        android:maxLines="1"
                        android:visibility="gone"
                        android:layout_height="wrap_content" />

                    <ImageButton
                        android:id="@+id/button_3"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@null"
                        android:src="@drawable/ic_add_circle_black_24dp"
                        android:onClick="anotherOption"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_4"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <RadioButton
                        android:id="@+id/option_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:onClick="change_check"/>

                    <EditText
                        android:id="@+id/text_4"
                        android:textSize="15sp"
                        android:hint="option 4"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:inputType="text"
                        android:maxLines="1"
                        android:visibility="gone"
                        android:layout_height="wrap_content" />

                    <ImageButton
                        android:id="@+id/button_4"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@null"
                        android:src="@drawable/ic_add_circle_black_24dp"
                        android:onClick="anotherOption"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_5"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <RadioButton
                        android:id="@+id/option_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:onClick="change_check"/>

                    <EditText
                        android:id="@+id/text_5"
                        android:textSize="15sp"
                        android:hint="option 5"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:inputType="text"
                        android:maxLines="1"
                        android:visibility="gone"
                        android:layout_height="wrap_content" />

                    <ImageButton
                        android:id="@+id/button_5"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@null"
                        android:src="@drawable/ic_add_circle_black_24dp"
                        android:onClick="anotherOption"/>

                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CREATE"
                    android:onClick="createPoll"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>
