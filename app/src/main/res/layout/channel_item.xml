<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_margin="@dimen/chatList_layout_margins"
    android:id="@+id/channel_layout">

    <ImageView
        android:layout_width="@dimen/chatList_icon_size"
        android:layout_height="@dimen/chatList_icon_size"
        android:layout_gravity="start"
        android:id="@+id/channel_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/chatList_name_margin_H"
        android:layout_marginEnd="@dimen/chatList_name_margin_H"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="@dimen/chatList_title_size"
        android:id="@+id/channel_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center"
        android:textSize="@dimen/chatList_count_size"
        android:gravity="end"
        android:layout_marginStart="@dimen/chatList_name_margin_H"
        android:layout_marginEnd="@dimen/chatList_message_count_margin"
        android:id="@+id/channel_count"/>


</LinearLayout>