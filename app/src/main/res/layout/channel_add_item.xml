<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/chatList_layout_margins"
    android:id="@+id/add_layout">

    <ImageView
        android:layout_width="@dimen/chatList_icon_size"
        android:layout_height="@dimen/chatList_icon_size"
        android:layout_gravity="start"
        android:id="@+id/add_image"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/chatList_name_margin_H"
        android:layout_marginEnd="@dimen/chatList_name_margin_H"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="@dimen/chatList_title_size"
        android:id="@+id/add_message"/>



</LinearLayout>