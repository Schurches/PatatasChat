<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--         Login and register             -->

    <style name="login_and_register_widget_margin">
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="login_and_register_textfield" parent="login_and_register_widget_margin">
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">@color/colorChatRoom_icons</item>
        <item name="android:textColorHint">@color/colorChatRoom_icons</item>
        <item name="android:backgroundTint">@color/colorChatRoom_icons</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="login_and_register_button" parent="login_and_register_widget_margin">
        <item name="android:elevation">1dp</item>
        <item name="android:backgroundTint">@color/login_button</item>
        <item name="android:textColor">@color/colorChatRoom_icons</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="login_and_register_layout_config">
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">20dp</item>
        <item name="android:background">@color/login_background</item>
    </style>

    <style name="login_and_register_text">
        <item name="android:textColor">@color/colorChatRoom_icons</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="image_holder_config">
        <item name="android:layout_width">@dimen/group_logo</item>
        <item name="android:layout_height">@dimen/group_logo</item>
        <item name="android:elevation">1dp</item>
    </style>

    <style name="logo_style" parent="image_holder_config">
        <item name="android:layout_marginTop">@dimen/padding_vertical_Logo</item>
        <item name="android:layout_marginBottom">@dimen/padding_vertical_Logo</item>
        <item name="android:background">@color/login_button</item>
    </style>

    <style name="profile_pic_style" parent="image_holder_config">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@color/login_button</item>
    </style>

    <!-- Chat Room-->



    <style name="margin_button">
        <item name="android:layout_margin">@dimen/padding_Boton</item>
    </style>

    <style name="padding_button" parent="margin_button">
        <item name="android:padding">@dimen/padding_Boton</item>
    </style>

    <style name="button_style" parent="padding_button">
        <item name="android:colorBackground">@color/colorAccent</item>
    </style>

    <style name="textfield_style">
        <item name="android:layout_marginRight">@dimen/padding_lateral_TextField</item>
        <item name="android:layout_marginLeft">@dimen/padding_lateral_TextField</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
