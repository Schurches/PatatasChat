<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--              General                   -->

    <style name="app_button" parent="Widget.AppCompat.Button">
        <item name="android:elevation">1dp</item>
        <item name="android:backgroundTint">@color/login_button</item>
        <item name="android:textColor">@color/colorChatRoom_icons</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="app_editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
    </style>

    <!--         Login and register             -->

    <style name="login_and_register_textfield" parent="app_editText">
        <item name="android:layout_margin">@dimen/login_and_register_textview_margin</item>
        <item name="android:textColor">@color/colorChatRoom_icons</item>
        <item name="android:textColorHint">@color/colorChatRoom_icons</item>
        <item name="android:backgroundTint">@color/colorChatRoom_icons</item>
    </style>

    <style name="login_and_register_button" parent="app_button">
        <item name="android:layout_margin">@dimen/login_and_register_button_margin</item>
    </style>

    <style name="login_and_register_layout_config">
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/login_and_register_layout_padding</item>
        <item name="android:background">@color/login_background</item>
    </style>

    <style name="login_and_register_text">
        <item name="android:textColor">@color/colorChatRoom_icons</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/login_and_register_textSize</item>
    </style>

    <style name="image_holder_config">
        <item name="android:layout_width">@dimen/group_logo</item>
        <item name="android:layout_height">@dimen/group_logo</item>
        <item name="android:elevation">1dp</item>
    </style>

    <style name="logo_style" parent="image_holder_config">
        <item name="android:layout_marginTop">@dimen/padding_vertical_Logo</item>
        <item name="android:layout_marginBottom">@dimen/padding_vertical_Logo</item>
        <item name="android:background">@color/login_button</item>
    </style>

    <style name="profile_pic_style" parent="image_holder_config">
        <item name="android:layout_marginTop">@dimen/profile_pic_margins</item>
        <item name="android:layout_marginBottom">@dimen/profile_pic_margins</item>
        <item name="android:background">@color/login_button</item>
    </style>

    <!-- Chat Room-->

    <style name="chatroom_icons_config">
        <item name="android:layout_width">@dimen/chatRoom_icon_size</item>
        <item name="android:layout_height">@dimen/chatRoom_icon_size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginEnd">@dimen/chatRoom_icon_margin</item>
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:visibility">gone</item>
    </style>

    <!--Add Channel-->

    <style name="sheet_layout_style">
        <item name="android:background">@color/color_Recycler</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/ban_addchannel_layout_padding</item>
    </style>

    <style name="addChannel_widgets">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/addChannel_widget_margin</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="addChannel_editText" parent="addChannel_widgets">
        <item name="android:inputType">textCapWords</item>
        <item name="android:maxLength">20</item>
        <item name="android:maxLines">1</item>
        <item name="android:drawableStart">@drawable/ic_nickname_24dp</item>
        <item name="android:hint">@string/chatChannel_name</item>
    </style>

    <!--User management-->

    <style name="management_editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/userManage_button_margin</item>
        <item name="android:textSize">@dimen/login_and_register_textSize</item>
    </style>

    <style name="management_button" parent="app_button">
        <item name="android:layout_margin">@dimen/userManage_button_margin</item>
    </style>

    <!--Polls-->

    <style name="poll_editText" parent="app_editText">
        <item name="android:textSize">@dimen/login_and_register_textSize</item>
        <item name="android:layout_margin">@dimen/polls_textField_margin</item>
    </style>

    <style name="poll_option_editText">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/login_and_register_textSize</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:layout_margin">@dimen/polls_textField_margin</item>
    </style>

    <style name="poll_option_imageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
    </style>

    <style name="poll_option_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingTop">@dimen/poll_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/poll_padding_vertical</item>
        <item name="android:paddingStart">@dimen/poll_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/poll_padding_horizontal</item>
    </style>

    <style name="poll_result_progress" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/poll_result_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/poll_result_padding_horizontal</item>
    </style>

    <style name="poll_result_textView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textSize">@dimen/login_and_register_textSize</item>
        <item name="android:layout_margin">@dimen/polls_textField_margin</item>
    </style>

    <!--Profile-->

    <style name="profile_widgets">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/profile_widget_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/profile_widget_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/profile_widget_margin_vertical</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="profile_textView" parent="profile_widgets">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/login_and_register_textSize</item>
    </style>

    <style name="profile_editText" parent="profile_widgets">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:hint">@string/email_hint</item>
        <item name="android:textSize">@dimen/login_and_register_textSize</item>
    </style>

    <!--Ban-->
    <style name="banned_textView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="banned_title" parent="banned_textView">
        <item name="android:textColor">@color/color_rank_ADMIN</item>
        <item name="android:textSize">@dimen/banned_title_size</item>
    </style>

    <style name="banned_content" parent="banned_textView">
        <item name="android:textSize">@dimen/login_and_register_textSize</item>
        <item name="android:layout_margin">@dimen/profile_widget_margin_horizontal</item>
    </style>

    <!--ANNOUNCE ITEM-->

    <style name="announce_imageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:src">@drawable/ic_iemotions_alert</item>
    </style>

    <style name="announce_text">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!--POLL ITEM-->

    <style name="poll_item_widgets">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/poll_item_margin</item>
    </style>

    <!--BUTTON ITEM-->
    <style name="button_item_padding">
        <item name="android:paddingStart">@dimen/iemotion_button_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/iemotion_button_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/iemotion_button_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/iemotion_button_padding_vertical</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
